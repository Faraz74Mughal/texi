<script defer>
  function init() {
    const btnCollapse = document.querySelectorAll(".btn-collpase");
    btnCollapse.forEach((e) => {
      e.addEventListener("click", function () {
        if(!this.parentElement.parentElement.matches(".active")){

          btnCollapse.forEach((x) => {
            x.parentElement.parentElement.classList.remove("active");
            x.children[0].children[0].setAttribute(
              "d",
              "M12 6v6m0 0v6m0-6h6m-6 0H6"
              );
            });
          }
        this.parentElement.parentElement.classList.toggle("active");
        if (this.children[0].children[0].getAttribute("d") == "M18 12H6")
          this.children[0].children[0].setAttribute(
            "d",
            "M12 6v6m0 0v6m0-6h6m-6 0H6"
          );
        else this.children[0].children[0].setAttribute("d", "M18 12H6");
      });
    });
  }
  window.onload = init();
</script>
