---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
  <!-- GENERIC -->
  <section
    class="flex justify-center items-center generic-hero bg-cover mt-10 md:mt-14 lg:mt-0 h-[200px] md:h-[250px] lg:h-[300px] [background-image:url('/images/aboutus-bg.png')]"
  >
    <div
      class="bg-black/50 h-full w-full flex flex-col items-center justify-center sm:container sm:mx-auto"
    >
      <h1
        class="xl:text-3xl lg:text-2xl text-xl mt-4  font-medium md:text-3xl text-center text-white lg:leading-[78px]"
      >
        About Us
      </h1>
      <p
        class="xl:text-2xl lg:text-xl text-lg  font-medium md:text-xl text-center text-white"
      >
        We are here to provide you best Services.
      </p>
      <a  href="/booking"
        class="bg-[#B6E9FC]/50 py-1 md:py-3 lg:py-4 px-2 md:px-4 lg:px-6 rounded md:rounded-2xl font-medium text-base md:text-xl lg:text-2xl mt-5 md:mt-8 [backdrop-filter:blur(9px)]"
      >
        BOOK NOW
      </a>
    </div>
  </section>

  <!-- BUSINESS CLASS -->
  <section class="py-9 lg:py-[55px] px-5 lg:px-[75px] sm:container sm:mx-auto">
    <h3 class="text-xl lg:text-2xl xl:text-3xl font-medium text-center">
      WE HAVE BUSINESS CLASS CARS AT YOU SERVICE
    </h3>
    <p class="text-base  lg:text-lg text-center mt-5 lg:mt-4">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
      veniam, quis nostrud
    </p>

    <div class="grid grid-cols-2 gap-3 mt-10 lg:mt-16">
      <div class="flex flex-col gap-3 md:gap-5 items-center">
        <div
          class="bg-[#E5F9FD] p-5 lg:p-10 w-max rounded-3xl lg:rounded-[50px]"
        >
          <img
            src="/images/window-star.png"
            class="w-8 md:w-11 lg:w-12"
            alt=""
          />
        </div>
        <p
          class="text-lg  lg:text-2xl font-semibold text-center"
        >
          QUALITY ASSURED
        </p>
        <p
          class="text-center text-base  lg:text-lg lg:leading-[34px] max-w-[428px]"
        >
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua
        </p>
      </div>

      <div class="flex flex-col gap-3 md:gap-5 items-center">
        <div
          class="bg-[#E5F9FD] p-5 lg:p-10 w-max rounded-3xl lg:rounded-[50px]"
        >
          <img
            src="/images/heritage-car.png"
            class="w-8 md:w-11 lg:w-12"
            alt=""
          />
        </div>
        <p
        class="text-lg  lg:text-2xl font-semibold text-center"
        >
          HERITAGE AND HISTORY
        </p>
        <p
        class="text-center text-base  lg:text-lg lg:leading-[34px] max-w-[428px]"
        >
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua
        </p>
      </div>
    </div>
  </section>

  <section class="cards sm:container sm:mx-auto">
    <!-- our service -->
    <div class="our-service flex md:flex-row flex-col">
      <!-- text -->
      <div
        class="md:w-1/2 w-full bg-[#E5F9FD] py-7 lg:py-16 px-10 lg:px-[73px]"
      >
        <h5 class="text-xl lg:text-2xl xl:text-3xl text-blue/50 font-medium">
          OUR <br class="md:hidden" /><span class="text-blue">SERVICE</span>
        </h5>
        <p class="text-base xl:text-lg mt-4 lg:mt-5 ">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam, quis nostrud
